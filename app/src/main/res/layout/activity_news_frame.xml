<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsFrame">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chevron_left_black_24dp"
            android:id="@+id/imageview1"
            android:onClick="gotomainpage"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ArticleTitle"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_below="@+id/imageview1"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/titletextheader"
            android:layout_marginLeft="30dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titletextheader"
            android:id="@+id/imageview2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titleagain"
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="#000000"
            android:id="@+id/titleagain"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/imageview2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="publisher2"
            android:id="@+id/publisher"
            android:textColor="#aaaaaa"
            android:layout_marginLeft="10dp"
            android:textSize="13dp"
            android:layout_below="@id/titleagain"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="info"
            android:layout_marginLeft="10dp"
            android:id="@+id/information"
            android:textColor="#000000"
            android:layout_below="@id/publisher"
            android:textSize="15dp"/>








    </RelativeLayout>







</ScrollView>